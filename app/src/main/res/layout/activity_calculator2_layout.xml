<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/text_view_calc2_title"
    android:text="Calculator Example"
    android:textAlignment="center"
    android:background="#696969"
    android:textColor="#ffffff "
    android:textAllCaps="true"
    android:layout_marginTop="16dp"
    android:gravity="center_horizontal"
    />

    <EditText
        android:id="@+id/text_view_calc_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginBottom="96dp"
        app:layout_constraintBottom_toTopOf="@id/button_calc2_3"
        app:layout_constraintStart_toEndOf="@id/text_view_calc2_title"
        app:layout_constraintTop_toBottomOf="@+id/text_view_calc2_title" />

    <EditText
        android:id="@+id/text_view_calc_second_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toTopOf="@id/button_calc2_3"
        app:layout_constraintTop_toBottomOf="@+id/text_view_calc_bar"
        tools:layout_editor_absoluteX="20dp"
        />
    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/button_calc2_equal"
    android:text="="
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    />

    <Button
        android:id="@+id/button_calc2_."
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        android:text="."
        app:layout_constraintBottom_toTopOf="@id/button_calc2_equal"
        app:layout_constraintStart_toStartOf="@+id/button_calc2_equal"
        />

    <Button
        android:id="@+id/button_calc2_0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@id/button_calc2_equal"
        app:layout_constraintRight_toRightOf="@id/button_calc2_."
        app:layout_constraintStart_toEndOf="@+id/button_calc2_."
        android:layout_marginLeft="16dp"

        />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button_calc2_C"
        android:text="C"
        app:layout_constraintBottom_toTopOf="@id/button_calc2_equal"
        app:layout_constraintStart_toEndOf="@id/button_calc2_0"
        app:layout_constraintRight_toRightOf="@id/button_calc2_0"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="16dp"
        />

    <Button
        android:id="@+id/button_calc2_kosacrta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="48dp"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@id/button_calc2_equal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintRight_toRightOf="@id/button_calc2_C"
        app:layout_constraintStart_toEndOf="@id/button_calc2_C"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button_calc2_7"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@id/button_calc2_."
        app:layout_constraintStart_toStartOf="@id/button_calc2_equal"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button_calc2_8"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@id/button_calc2_0"
        app:layout_constraintStart_toStartOf="@id/button_calc2_0"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button_calc2_9"
        android:text="9"
        app:layout_constraintStart_toStartOf="@id/button_calc2_C"
        app:layout_constraintBottom_toTopOf="@id/button_calc2_C"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/button_calc2_kosacrta"
        app:layout_constraintBottom_toTopOf="@id/button_calc2_kosacrta"
        android:layout_marginBottom="10dp"
        android:text="*"
        android:id="@+id/button_calc2_multiply"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button_calc2_4"
        android:text="4"
        app:layout_constraintStart_toStartOf="@id/button_calc2_7"
        app:layout_constraintBottom_toTopOf="@id/button_calc2_7"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="5"
        android:id="@+id/button_calc2_5"
        app:layout_constraintStart_toStartOf="@id/button_calc2_8"
        app:layout_constraintBottom_toTopOf="@id/button_calc2_8"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/button_calc2_6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="6"
        app:layout_constraintStart_toStartOf="@id/button_calc2_9"
        app:layout_constraintTop_toTopOf="@+id/button_calc2_5"
        />
<Button
    android:layout_width="50dp"
    android:layout_height="50dp"
    app:layout_constraintBottom_toTopOf="@id/button_calc2_4"
    app:layout_constraintStart_toStartOf="@id/button_calc2_4"
    android:layout_marginBottom="10dp"
    android:text="1"
    android:id="@+id/button_calc2_1"
    />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/button_calc2_5"
        app:layout_constraintBottom_toTopOf="@id/button_calc2_5"
        android:layout_marginBottom="10dp"
        android:text="2"
        android:id="@+id/button_calc2_2"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="3"
        android:id="@+id/button_calc2_3"
        app:layout_constraintBottom_toTopOf="@id/button_calc2_6"
        app:layout_constraintStart_toStartOf="@id/button_calc2_6"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/button_calc2_kosacrta"
        app:layout_constraintBottom_toTopOf="@id/button_calc2_multiply"
        android:layout_marginBottom="10dp"
        android:text="-"
        android:id="@+id/button_calc2_munus"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="+"
        android:id="@+id/button_calc2_add"
        app:layout_constraintStart_toStartOf="@id/button_calc2_multiply"
         app:layout_constraintBottom_toTopOf="@id/button_calc2_munus"
        android:layout_marginBottom="10dp"
        />


    
    
    
    
    
   
        
</androidx.constraintlayout.widget.ConstraintLayout>




