<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#696969"
        android:text="Calc"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_text_number1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="50dp"
        android:layout_margin="30dp"
        android:hint="Number 1"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_number2"
        android:layout_marginTop="80dp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text_number1"
        android:hint="number2"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/edit_text_number1"
        app:layout_constraintTop_toBottomOf="@id/edit_text_number2"
        android:layout_marginTop="50dp"
        android:id="@+id/button_calc3_Add"
        android:text="ADD"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_calc3_Sub"
        app:layout_constraintEnd_toEndOf="@id/edit_text_number2"
        app:layout_constraintTop_toBottomOf="@id/edit_text_number2"
        android:layout_marginTop="50dp"
        android:text="SUB"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/button_calc3_Add"
        app:layout_constraintTop_toBottomOf="@id/button_calc3_Add"
        android:layout_marginTop="50dp"
        android:id="@+id/button_calc3_MUL"
        android:text="MUL"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/button_calc3_Sub"
        app:layout_constraintTop_toBottomOf="@id/button_calc3_Sub"
        android:layout_marginTop="50dp"
        android:id="@+id/button_calc3_Div"
        android:text="DIV"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/button_calc3_MUL"
        app:layout_constraintStart_toStartOf="@id/button_calc3_MUL"
        android:text="result"
        android:layout_marginTop="50dp"
        android:id="@+id/textview_calc3_TXTView"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/calc3_result"
        app:layout_constraintTop_toBottomOf="@id/textview_calc3_TXTView"
        app:layout_constraintStart_toStartOf="@id/textview_calc3_TXTView"
        android:layout_marginTop="50dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>